{
  "name": "@shuent/markdown-generator",
  "version": "0.2.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "Modern TypeScript CLI for generating markdown files with templates and interactive prompts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "mdg": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuent/markdown-generator.git"
  },
  "homepage": "https://github.com/shuent/markdown-generator",
  "author": "Shunta Uehara",
  "keywords": [
    "markdown",
    "cli",
    "typescript",
    "generator",
    "template",
    "interactive"
  ],
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "inquirer": "^9.2.15",
    "gray-matter": "^4.0.3",
    "slugify": "^1.6.6",
    "cosmiconfig": "^9.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0",
    "@vitest/coverage-v8": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "sample",
    "README.md",
    "LICENSE"
  ]
}
